<form class="form-horizontal" id="newTournamentForm" action="/admin/tournament/{{tournament_id}}/newEvent" method="POST">
  <fieldset>
    <legend>New Event</legend>

    <div class="form-group">
      <label for="eventYear" class="col-lg-2 control-label">Year</label>
      <div class="col-lg-10">
        <input type="number" class="form-control" id="eventYear" name="eventYear" placeholder="YYYY" required>
      </div>
    </div>
    <div class="form-group">
      <input class="form-control btn btn-info" type="submit" name="submit" value="Submit">
    </div>
  </fieldset>
</form>
